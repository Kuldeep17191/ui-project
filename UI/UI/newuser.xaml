<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.newuser">

    <StackLayout Orientation="Vertical" Padding="30" Spacing="40">
        <BoxView HeightRequest="10"/>
        
        <Entry x:Name="Userid" Text="{Binding Userid}" Placeholder="Choose a User Name"   
                           PlaceholderColor="Gray" HeightRequest="40" IsPassword="True" TextColor="Black"/>


        <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Choose a Password"   
                           PlaceholderColor="Gray" HeightRequest="40" IsPassword="True" TextColor="Black"/>

        <Entry x:Name="RePassword" Text="{Binding Password}" Placeholder="Confirm the Password"   
                           PlaceholderColor="Gray" HeightRequest="40" IsPassword="True" TextColor="Black"/>

        <Button Text="OK" TextColor="Black" Clicked="ok_clicked" FontAttributes="Bold" FontSize="Large" 
                HorizontalOptions="FillAndExpand"  />

    </StackLayout>


</ContentPage>